<?xml version="1.0" encoding="UTF-8"?>
<addon version="0.2">
    <title xml:lang="ko">ZiperUpper!</title>
    <title xml:lang="en">ZiperUpper!</title>
    <description xml:lang="ko">여러 개의 CSS, JS 파일들을 하나로 합쳐 출력합니다.</description>
    <description xml:lang="en">Merge multiple CSS and JS files into one.</description>
    <version>0.3</version>
    <date>2015-05-21</date>
    <author email_address="kijin@kijinsung.com" link="https://github.com/kijin">
        <name xml:lang="ko">Kijin Sung</name>
        <name xml:lang="en">Kijin Sung</name>
    </author>
	<extra_vars>
		<var name="zip_type" type="select">
			<title xml:lang="ko">합칠 대상</title>
			<title xml:lang="en">Merge targets</title>
			<options value="css">
				<title xml:lang="ko">CSS에만 적용</title>
				<title xml:lang="en">CSS only</title>
			</options>
			<options value="css+js">
				<title xml:lang="ko">CSS와 JS에 적용</title>
				<title xml:lang="en">CSS and JS</title>
			</options>
		</var>
		<var name="zip_target" type="select">
			<title xml:lang="ko">적용할 브라우저</title>
			<title xml:lang="en">Target browsers</title>
			<options value="ie10">
				<title xml:lang="ko">IE 10 이하</title>
				<title xml:lang="en">IE 10 and below</title>
			</options>
			<options value="all">
				<title xml:lang="ko">모든 브라우저</title>
				<title xml:lang="en">All browsers</title>
			</options>
		</var>
	</extra_vars>
</addon>
